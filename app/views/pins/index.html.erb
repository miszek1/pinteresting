<div class="container">    

  <div class="form-panel">

      <div class="form-heading">
      <h1>Listing pins</h1>
    </div>

    <div class="form-body">
      <table>
        <thead>
          <tr>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pins.each do |pin| %>
            <tr>
              <td><%= pin.description %></td>
              <td><%= pin.user.email %></td>
              <td><%= link_to 'Show', pin, class: "btn btn-primary" %></td>
              <% if pin.user == current_user %>
              <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %></td>
              <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <% if user_signed_in? %>
      <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>

</div>